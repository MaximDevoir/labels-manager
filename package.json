    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "node-fetch": "^2.6.0",
    "parse-json": "^5.0.0",
    "probot": "^9.6.6",
    "strip-ansi": "^6.0.0"
  },
